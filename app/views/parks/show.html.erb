

<div class="header-parks-show">
  <div class="parks_show_header">
    <h1 class="park_name"> <%= @park.name %></h1>
    <%= image_tag "light-forest-trees.png" %>
  </div>

  <div class="google-maps">
    <%= render 'park_map', park: @park %>
  </div>
</div>

<div class="attributes-display">
  <div class="activities-tag">


  <% @park.activities.each do |k| %>
    <% if k == "canoeing" %>
      <%= image_tag "canoeing-icon.png", title: "Canoeing" %>

    <% elsif k == "biking" %>
      <%= image_tag "biking-icon.png", title: "Biking" %>

    <% elsif k == "birding" %>
      <%= image_tag "birding-icon.png", title: "Birding" %>

    <% elsif  k == "boating" %>
      <%= image_tag "boating-icon.png", title: "Boating" %>

    <% elsif k == "fishing" %>
      <%= image_tag "fishing-icon.png", title: "Fishing" %>

    <% elsif k == "hiking" %>
      <%= image_tag "hiking-icon.png", title: "Hiking" %>

    <% elsif k == "hunting" %>
      <%= image_tag "hunting-icon.png", title: "Hunting" %>

    <% else k == "swimming" %>
      <%= image_tag "swimming-icon.png", title: "Swimming" %>

    <% end %>
  <% end %>
</div>
  </div>

<div class="facilities-display">
  <h3 class="park_facilities_heading">Park Facilities</h3>
  <% @park.facilities.each do |k| %>
    <p class="facilities-tag"> <%=k.capitalize%> </p>
    <%end%>
</div>

<div class="plan_trip_button_from_park">
  <%= link_to "Plan Your Trip to #{@park.name}", new_trip_path %>
</div>
