<div class="show-body">


  <div class="parks_show_header">
    <h1 class="park_name"> <%= @parks.name %></h1>
    <%= image_tag "light-forest-trees.png" %>
  </div>

<div class="attributes-display">
  <div class="activities-tag">


  <% @parks.activities.each do |k| %>
    <% if k == "canoeing" %>
      <%= image_tag "canoeing-icon.png" %>

    <% elsif k == "biking" %>
      <%= image_tag "biking-icon.png" %>

    <% elsif k == "birding" %>
      <%= image_tag "birding-icon.png" %>

    <% elsif  k == "boating" %>
      <%= image_tag "boating-icon.png" %>

    <% elsif k == "fishing" %>
      <%= image_tag "fishing-icon.png" %>

    <% elsif k == "hiking" %>
      <%= image_tag "hiking-icon.png" %>

    <% elsif k == "hunting" %>
      <%= image_tag "hunting-icon.png" %>

    <% else k == "swimming" %>
      <%= image_tag "swimming-icon.png" %>

    <% end %>
  <% end %>
</div>
  </div>

</div>

<div class="facilities-display">
  <% @parks.facilities.each do |k| %>
    <%=k%>
    <%end%>
</div>

</div>
</div>
