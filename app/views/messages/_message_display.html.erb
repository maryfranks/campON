<div class="display_message">
  <% messages.each do |message| %>
    <% if message.trip_id = @trip %>
      <span class= "message_bubble"><%= message.message %></span>
      <span class ="message_username"><%= message.user.name %></span>
      <p><%= link_to 'Edit', edit_trip_message_path(@trip.id, message.id) %></p> <p><%= link_to 'Delete', trip_message_path(@trip.id, message.id), method: :delete, data: {confirm: "Are you sure you want to delete this review?"} %></p>
    <% end %>
  <% end %>
</div>
