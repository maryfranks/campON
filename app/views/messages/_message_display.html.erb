<div class=display_message</div>

  <% messages.each do |message| %>
    <% if message.trip_id = @trip %>
      <p><%= message.message %></p>
      <p><%= message.user.name %></p>
      <p><%= link_to 'Edit', edit_trip_message_path(@trip.id, message.id) %></p>
      <p><%= link_to 'Delete', trip_message_path(@trip.id, message.id), method: :delete, data: {confirm: "Are you sure you want to delete this review?"} %></p>
    <% end %>

  <% end %>
