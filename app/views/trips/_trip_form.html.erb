<%= form_for trip do |f| %>
    <% if trip.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(trip.errors.count, "error") %> prohibited this trip from being saved:</h2>

        <ul class='trip-error-messages'>
        <% trip.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>

      </div>
    <% end %>

      <div class="trips-title">
        <p class="trip-name">Trip Name</p>
        <%= f.text_field :name %>

        <p class="pickapark">Pick a Park</p>
        <%= f.collection_select(:park_id, Park.all, :id, :name)  %>
      </div>
      
    <div class="mid-div">

      <div class="trip-start-date">
        <p class="choosestartdate">Start Date</p>
        <%= f.date_field :start_date %>
      </div>

      <div class="trip-start-date">
        <p class="chooseenddate">End Date</p>
        <%= f.date_field :end_date %>
      </div>

    </div>

    <div class="trip-booked">
      <p class="haveyoubooked">Have You Booked?</p>
        <p class="reservationlink">If not visit <a href="https://reservations.ontarioparks.com/"> The Ontario Parks Website</a> and then, come back!</p>
      <input type="checkbox" value="1" name="trip[booked]" id="trip_booked">

      <input id="trip-submit-button" type="submit" name="commit" value="Create Trip" data-disable-with="Create Trip">
    </div>
  <% end %>
