<%= form_for trip do |f| %>
    <% if trip.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(trip.errors.count, "error") %> prohibited this trip from being saved:</h2>

        <ul class='trip-error-messages'>
        <% trip.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>

      </div>
    <% end %>

    <p class="trip-name">
      <%= f.label "Trip Name" %><br />
      <%= f.text_field :name %>
    </p>

    <p class="park-selection">
      <%= f.label "Which Park do you want to go to?" %><br />
      <%= f.collection_select(:park_id, Park.all, :id, :name)  %>
    </p>

    <p class="trip-start-date">
      <%= f.label :start_date %><br />
      <%= f.date_field :start_date %>
    </p>

    <p class="trip-end-date">
      <%= f.label :end_date %><br />
      <%= f.date_field :end_date %>
    </p>

    <p class="trip-booked">
      <%= f.label "Did you book your trip?" %>
      <%= f.check_box :booked %>
    </p>

    <div class="button submit">
      <%= f.submit %>
    </div>
  <% end %>
