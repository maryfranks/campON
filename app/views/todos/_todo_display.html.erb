<div class="display-todos"</div>


  <% todos.each do |todo| %>
      <%= form_for [trip, todo] do |f| %>
        <p><%= f.collection_select(:user_id, trip.users, :id, :name) %></p>
        <p><%= f.select(:label, ['Do','Buy','Bring'],:selected =>todo.label) %></p>
        <p><%= f.text_field :text %></p>
        <div class="todo-update-delete">  
          <p class="todo-delete-button"><%= link_to 'Delete', trip_todo_path(trip.id, todo.id), method: :delete, data: {confirm: "Are you sure you want to delete this todo?"} %></p> | <input class="update-todo-button"type="submit" name="commit" value="Update" data-disable-with="Update Todo">
        </div>
      <%end%>
  <% end %>

</div>
