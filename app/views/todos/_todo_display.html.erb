<div class=display_todos</div>

  <% todo.each do |todo| %>
    <% if todo.trip_id = @trip %>
      <p><%= todo.text %></p>
      <p><%= link_to 'Edit', edit_trip_todo_path(@trip.id, todo.id) %></p>
      <p><%= link_to 'Delete', trip_todo_path(@trip.id, todo.id), method: :delete, data: {confirm: "Are you sure you want to delete this todo?"} %></p>
    <% end %>

  <% end %>
