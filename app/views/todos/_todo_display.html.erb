<div class="display-todos"</div>

  <% todos.each do |todo| %>
      <%= form_for [@trip, todo] do |f| %>
        <%= f.collection_select(:user_id, @trip.users, :id, :name) %>
        <%= f.select(:label, ['Do','Buy','Bring'],:selected =>todo.label) %>
        <%= f.text_field :text %></p>
        <%= link_to 'Delete', trip_todo_path(@trip.id, todo.id), method: :delete, data: {confirm: "Are you sure you want to delete this todo?"} %>
      <%end%>
  <% end %>

</div>
